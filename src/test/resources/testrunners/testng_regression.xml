<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression Suite" thread-count="2" parallel="tests" verbose="4">

	<listeners>
		<listener class-name="com.qa.democart.listeners.ExtentReportListener" />
		<listener class-name="com.qa.democart.listeners.TestAllureListener" />
		<listener class-name="com.qa.democart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Page Test">
		<classes>
			<class name="com.qa.democart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<classes>
			<class name="com.qa.democart.tests.AccountsPageTest" />
		</classes>
	</test>

</suite>